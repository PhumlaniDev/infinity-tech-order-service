<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
    <lokiHttp>
      <url>http://localhost:3100/loki/api/v1/push</url>
    </lokiHttp>
    <format>
      <pattern>
        {
          ""app": "order-service",
          "time": "%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}",
          "level": "%level",
          "thread": "%thread",
          "logger": "%logger{36}",
          "message": "%msg"
      </pattern>
    </format>
  </appender>

  <root level="INFO">
    <appender-ref ref="LOKI"/>
  </root>

</configuration>